<!--pages/calendar/calendar.wxml-->
<view class="page">
  <view class='container'>
    <view class="cal_header">
      <view class="cal_left_arrow" bindtap="bindMonthChange" data-type="back">《</view>
      <view class="cal_title">{{curMonth}}</view>   
      <view class="cal_left_arrow" bindtap="bindMonthChange" data-type="forward">》</view>
    </view>
    <view class='cal_content'>
      <CalendarTable year="{{year}}" month="{{month}}"></CalendarTable>
    </view>
  </view>
</view>
