/* components/todo/todoForm/todoForm.wxss */
.todoForm-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 33vh;
  border-bottom: 1rpx solid #66cccc;
  background-color: white;
  z-index: 3;
}
.tocdoForm-switch{
  position: absolute;
  right: 32rpx;
}
.todoForm-btn_group {
  position: absolute;
  bottom: 10rpx;
  right: 32rpx;
}
.todoForm-btn_group .btn{
  margin-left: 10rpx;
  width: 160rpx;
}