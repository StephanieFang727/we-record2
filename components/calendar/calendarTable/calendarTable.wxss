/* components/calendar/calendarTable.wxss */
.comp-cal_content{
  display: flex;
  flex-flow: column;
  flex: 1;
}
.table {
  border-top :1px solid #dadada;
  /* border-right: 0;
  border-bottom: 0; */
  width: 100%;
 
}
.thead {
  width: 100%;
  display: flex;
  justify-content: space-around;
  height: 50rpx;
}
.tbody {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}
.td {
  position: relative;
  display: flex;
  justify-content: center;
  width: 14.2857%;
  /* height: 82rpx; */
  text-align: center;
  /* overflow: hidden; */
  /* padding: 2rpx 0; */
  /* border: 1rpx solid black; */
  /* border-radius: 45%; */
  transition: height 0.3s
}
.td_content{
  position: relative;
  width: 80%;
  height: 0;
  padding-top: calc(80% - 4rpx);
  /* background-color: yellow; */
  border-radius: 50%;
  /* display: flex;
  justify-items: center; */
  border: 2rpx solid transparent;
}
.td_content .text{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.td_content.active {
  border: 2rpx solid #C077AF;
}
.td_content .td_curdate {
  color: #C077AF
}
.td .cal_icon-group {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.td .cal_icon {
  /* position: absolute; */
  /* bottom: 6rpx; */
  font-size: 16px;
}
.cal_icon.todo_icon {
  color: #C077AF;
}
.cal_icon.exer_icon {
  color: #66cccc;
}
.th,.td {
  /* padding: 6px; */
  /* border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada; */
  text-align: center;
  /* width:100% */
}
.th {
  font-weight: 400;
  /* background-color: #dadada */
}
.tbody .cal_pre,.cal_next {
  color: #ccc;
}
